{
  "name": "software-estimation-manager",
  "version": "1.0.0",
  "description": "Desktop application for managing software development cost estimates",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run start\" \"npm run watch\"",
    "watch": "nodemon --watch src --ext js,html,css --exec \"electron .\"",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "cucumber": "cucumber-js",
    "cucumber:report": "cucumber-js --format html:reports/cucumber.html",
    "test:e2e": "cucumber-js",
    "test:e2e:headless": "HEADLESS=true cucumber-js",
    "test:e2e:visible": "HEADLESS=false cucumber-js",
    "test:e2e:slow": "HEADLESS=false SLOW_MO=1000 cucumber-js",
    "test:e2e:debug": "HEADLESS=false DEBUG=true SLOW_MO=500 cucumber-js",
    "test:all": "npm run test && npm run test:e2e",
    "agents": "node agents/agent-runner.js",
    "agents:list": "node agents/agent-runner.js list",
    "agents:validate": "node agents/agent-runner.js validate",
    "agents:test": "node agents/agent-runner.js test",
    "tdd": "node agents/agent-runner.js tdd",
    "test-driven-feature": "node agents/agent-runner.js test-driven-feature",
    "guided-tdd": "node agents/agent-runner.js test-driven-feature",
    "workflow:guided": "node agents/agent-runner.js workflow test_driven_feature_development",
    "workflow:tdd": "node agents/agent-runner.js workflow tdd_feature_development"
  },
  "keywords": [
    "electron",
    "estimation",
    "project-management",
    "cost-calculation"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@cucumber/cucumber": "^10.3.1",
    "@playwright/test": "^1.40.1",
    "@testing-library/jest-dom": "^6.1.5",
    "babel-jest": "^29.7.0",
    "concurrently": "^7.6.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "nodemon": "^3.0.2",
    "playwright": "^1.40.1"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.72",
    "@google/gemini-cli": "^0.1.18",
    "electron-store": "^8.1.0",
    "exceljs": "^4.4.0",
    "papaparse": "^5.4.1",
    "uuid": "^9.0.1",
    "xlsx": "^0.18.5",
    "zustand": "^5.0.8"
  },
  "build": {
    "appId": "com.yourcompany.software-estimation-manager",
    "productName": "Software Estimation Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": [
        {
          "target": "dir",
          "arch": [
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
